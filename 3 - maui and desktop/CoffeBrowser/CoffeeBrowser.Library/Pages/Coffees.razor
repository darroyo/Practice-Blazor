@page "/coffees"
@using CoffeBrowser.Library.Data
@using Microsoft.AspNetCore.Authorization

<h3>Coffees</h3>
<AuthorizeView>
    <Authorized>
        @if (coffees == null)
        {
            <span style="color:red">Loading...</span>
        }
        else
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var c in coffees)
                    {
                        <tr>
                            <td>@c.Name</td>
                            <td>@c.Description</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </Authorized>
    <NotAuthorized>
        Please login
    </NotAuthorized>
</AuthorizeView>


