@page "/exampleJavaScript"
@rendermode InteractiveServer
@inject IJSRuntime JavaScript

<button @onclick="DoWork">Click me</button>
<button @onclick="DoWork2">Click me 2</button>
@if(!status){
      <Loading/>
    }else{
        <p role="status">Current count: @currentCount</p>
    }

@code {
    private int currentCount = 0;
    private bool status = false;
    private async Task DoWork()
    {
        if (await JavaScript.InvokeAsync<bool>(
        "confirm",
        $"""Deseas incrementar el contador ???"""))
        {
            currentCount++;
            status = true;
        }
        
    }
    private async Task DoWork2()
    {
        var messageParams = new
    {
        title = "Deseas incrementar el contador ???",
        text = $"""bla bla bla""",
        icon = "warning",
        buttons = new
        {
            abort = new { text = "no quiero", value = false },
            confirm = new { text = "si quiero", value = true }
        },
        dangerMode = true
    };

    if (await JavaScript.InvokeAsync<bool>("swal", messageParams))
    {
        currentCount++;
            status = true;
    }
        
    }
}
